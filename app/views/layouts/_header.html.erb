<header class="navbar fixed-top navbar-inverse navbar-dark bg-dark">
  <div class="container">
    <%= link_to "Sample app", root_path, id: "logo", class: "text-light" %>
    <nav>
      <ul class="nav navbar-nav d-flex flex-row">
        <li><%= link_to "Home", root_path, class: "text-light p-2" %></li>
        <li><%= link_to "Help", help_path, class: "text-light p-2" %></li>
        <% if logged_in? %>
          <li><%= link_to "Users", '#' %></li>
          <li>
            <ul>
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path,method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Login", login_path, class: "text-light p-2" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>